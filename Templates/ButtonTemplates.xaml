                  StrokeThickness="2">
                <Path.Stroke>
                    <SolidColorBrush x:Name="StrokeColor" Color="{StaticResource OverflowColor}"/>
                </Path.Stroke>
                <Path.Fill>
                    <SolidColorBrush x:Name="FillColor" Color="{StaticResource SurfaceColor}"/>
                </Path.Fill>
                <Path.Data>
                    <PathGeometry>
                        <PathFigure IsClosed="True" StartPoint="0,20" x:Name="ArrowHurt">
                            <LineSegment x:Name="P1" Point="30,30" />
                            <LineSegment x:Name="P2" Point="40,20" />
                            <LineSegment x:Name="P3" Point="30,10" />
                        </PathFigure>
                        <PathFigure IsClosed="True" StartPoint="45,20" x:Name="CenterPart">
                            <LineSegment x:Name="P4" Point="50,25" />
                            <LineSegment x:Name="P5" Point="55,20" />
                            <LineSegment x:Name="P6" Point="50,15" />
                        </PathFigure>
                        <PathFigure IsClosed="True" StartPoint="50,10" x:Name="UpPart">
                            <LineSegment x:Name="P13" Point="55,5" />
                            <LineSegment x:Name="P14" Point="50,0" />
                            <LineSegment x:Name="P15" Point="45,5" />
                        </PathFigure>
                        <PathFigure IsClosed="True" StartPoint="60,20" x:Name="RightPart">
                            <LineSegment x:Name="P10" Point="65,25" />
                            <LineSegment x:Name="P11" Point="70,20" />
                            <LineSegment x:Name="P12" Point="65,15" />
                        </PathFigure>
                        <PathFigure IsClosed="True" StartPoint="50,30" x:Name="DownPart">
                            <LineSegment x:Name="P7" Point="45,35" />
                            <LineSegment x:Name="P8" Point="50,40" />
                            <LineSegment x:Name="P9" Point="55,35" />
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                <Path.Effect>
                    <DropShadowEffect x:Name="ShadowEffect" BlurRadius="0" Opacity="1" Direction="315" ShadowDepth="5" Color="{StaticResource ShadowOnLight}"></DropShadowEffect>
                </Path.Effect>
            </Path>
