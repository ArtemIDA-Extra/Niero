                    </VisualState>
                    <VisualState Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.2" To="5"
                                             Storyboard.TargetName="ShadowEffect"
                                             Storyboard.TargetProperty="(DropShadowEffect.ShadowDepth)" />
                            <ColorAnimation Duration="0:0:0.2" To="{StaticResource OverlayDarkColor}"
                                            Storyboard.TargetName="FillColor"
                                            Storyboard.TargetProperty="Color"/>
                            <ColorAnimation Duration="0:0:0.2" To="{StaticResource OverflowColor}"
                                            Storyboard.TargetName="StrokeColor"
                                            Storyboard.TargetProperty="Color"/>
                            <!-- ArrowHurt -->
                            <PointAnimation To="0,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="ArrowHurt"
                                            Storyboard.TargetProperty="StartPoint" />
                            <PointAnimation To="30,30" Duration="0:0:0.2"
                                            Storyboard.TargetName="P1"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="40,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="P2"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="30,10" Duration="0:0:0.2"
                                            Storyboard.TargetName="P3"
