                            <!-- CenterPart -->
                            <PointAnimation To="45,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="CenterPart"
                                            Storyboard.TargetProperty="StartPoint" />
                            <PointAnimation To="50,25" Duration="0:0:0.2"
