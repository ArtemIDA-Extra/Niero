<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Niero">

    <!-- Templates -->

    <ControlTemplate TargetType="Button" x:Key="DefaultTextButtonTemplate">
        <Border x:Name="btn_border"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Height="{TemplateBinding Height}"
                Width="{TemplateBinding Width}"
                Margin="0,0,0,0"
                Padding="2,0,2,0">

            <Border.Background>
                <SolidColorBrush x:Name="BorderColor" Color="{StaticResource BaseColor}" />
            </Border.Background>

            <ContentControl x:Name="contentControl"
                            Margin="{TemplateBinding Margin}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                <ContentControl.Foreground>
                    <SolidColorBrush x:Name="ContentColor" Color="{StaticResource DarkTextColor}"/>
                </ContentControl.Foreground>
                <TextBlock Text="{TemplateBinding Content}"
                           TextAlignment="Center"
                           TextWrapping="WrapWithOverflow"/>
            </ContentControl>

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.3" To="{StaticResource OverlayDarkColor}"
                                            Storyboard.TargetName="BorderColor"
                                            Storyboard.TargetProperty="Color" />
                            <ColorAnimation Duration="0:0:0.3" To="{StaticResource BaseColor}"
                                            Storyboard.TargetName="ContentColor"
                                            Storyboard.TargetProperty="Color" />
                            <!--<ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.3" To="0,0,0,0" />-->
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Normal">
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.3" To="{StaticResource BaseColor}"
                                            Storyboard.TargetName="BorderColor"
                                            Storyboard.TargetProperty="Color" />
                            <ColorAnimation Duration="0:0:0.3" To="{StaticResource DarkTextColor}"
                                            Storyboard.TargetName="ContentColor"
                                            Storyboard.TargetProperty="Color" />
                            <!--<ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.3" To="2,2,2,2" />-->
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="BorderColor" Storyboard.TargetProperty="Opacity" Duration="0:0:0.3" To="1" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Border>
    </ControlTemplate>

    <ControlTemplate TargetType="Button" x:Key="DefaultRoundedButtonTemplate">
        <Border x:Name="btn_border"
                CornerRadius="20"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Height="{TemplateBinding Height}"
                Width="{TemplateBinding Width}">

            <Border.Background>
                <SolidColorBrush x:Name="BorderColor" Color="{StaticResource SurfaceColor}" Opacity="0" />
            </Border.Background>

            <ContentControl x:Name="contentControl"
                            Margin="{TemplateBinding Margin}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}"
                            Foreground="{TemplateBinding Foreground}">
            </ContentControl>

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="BorderColor" Storyboard.TargetProperty="Opacity" Duration="0:0:0.5" To="1" />
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Normal">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="BorderColor" Storyboard.TargetProperty="Opacity" Duration="0:0:0.5" To="0" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Border>
    </ControlTemplate>

    <ControlTemplate TargetType="Button" x:Key="HomeButtonTemplate">
        <Border BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Height="{TemplateBinding Height}"
                Width="{TemplateBinding Width}">
            <Border.Background>
                <SolidColorBrush x:Name="BorderColor" Color="{StaticResource WhiteColor}" />
            </Border.Background>
            <ContentControl Margin="{TemplateBinding Margin}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}">
                <ContentControl.Foreground>
                    <SolidColorBrush x:Name="ContentColor" Color="{StaticResource DarkTextColor}"/>
                </ContentControl.Foreground>
            </ContentControl>

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BorderColor" Storyboard.TargetProperty="Color" Duration="0:0:0.25" To="{StaticResource DarkTextColor}"/>
                            <ColorAnimation Storyboard.TargetName="ContentColor" Storyboard.TargetProperty="Color" Duration="0:0:0.25" To="{StaticResource BaseColor}"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Normal">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="BorderColor" Storyboard.TargetProperty="Color" Duration="0:0:0.25" To="{StaticResource WhiteColor}"/>
                            <ColorAnimation Storyboard.TargetName="ContentColor" Storyboard.TargetProperty="Color" Duration="0:0:0.25" To="{StaticResource DarkTextColor}"/>
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <Storyboard>
                            <!--<ColorAnimation Storyboard.TargetName="BorderColor" Storyboard.TargetProperty="Color" Duration="0:0:0.75" To="{StaticResource LightWhiteColor}" />-->
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Border>
    </ControlTemplate>

    <ControlTemplate TargetType="Button" x:Key="ArrowButtonTemplate">
        <Border Background="Transparent"
                Height="40"
                Width="75">
