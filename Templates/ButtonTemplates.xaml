                            <PointAnimation To="50,40" Duration="0:0:0.2"
                                            Storyboard.TargetName="P8"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="55,35" Duration="0:0:0.2"
                                            Storyboard.TargetName="P9"
                                            Storyboard.TargetProperty="Point" />
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.2" To="2"
                                             Storyboard.TargetName="ShadowEffect"
                                             Storyboard.TargetProperty="(DropShadowEffect.ShadowDepth)"/>
