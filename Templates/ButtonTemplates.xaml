                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.2" To="5"
                                             Storyboard.TargetName="ShadowEffect"
                                             Storyboard.TargetProperty="(DropShadowEffect.ShadowDepth)" />
                            <ColorAnimation Duration="0:0:0.2" To="{StaticResource OverlayDarkColor}"
                                            Storyboard.TargetName="FillColor"
                                            Storyboard.TargetProperty="Color"/>
                            <ColorAnimation Duration="0:0:0.2" To="{StaticResource OverflowColor}"
                                            Storyboard.TargetName="StrokeColor"
                                            Storyboard.TargetProperty="Color"/>
                            <!-- ArrowHurt -->
                            <PointAnimation To="5,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="ArrowHurt"
                                            Storyboard.TargetProperty="StartPoint" />
                            <PointAnimation To="35,30" Duration="0:0:0.2"
                                            Storyboard.TargetName="P1"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="45,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="P2"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="35,10" Duration="0:0:0.2"
                                            Storyboard.TargetName="P3"
                                            Storyboard.TargetProperty="Point" />
                            <!-- CenterPart -->
                            <PointAnimation To="45,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="CenterPart"
                                            Storyboard.TargetProperty="StartPoint" />
                            <PointAnimation To="50,25" Duration="0:0:0.2"
                                            Storyboard.TargetName="P4"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="55,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="P5"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="50,15" Duration="0:0:0.2"
                                            Storyboard.TargetName="P6"
                                            Storyboard.TargetProperty="Point" />
                            <!-- UpPart -->
                            <PointAnimation To="50,15" Duration="0:0:0.2"
                                            Storyboard.TargetName="UpPart"
                                            Storyboard.TargetProperty="StartPoint" />
                            <PointAnimation To="55,10" Duration="0:0:0.2"
                                            Storyboard.TargetName="P13"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="50,5" Duration="0:0:0.2"
                                            Storyboard.TargetName="P14"
                                            Storyboard.TargetProperty="Point" />
                            <PointAnimation To="45,10" Duration="0:0:0.2"
                                            Storyboard.TargetName="P15"
                                            Storyboard.TargetProperty="Point" />
                            <!-- RightPart -->
                            <PointAnimation To="55,20" Duration="0:0:0.2"
                                            Storyboard.TargetName="RightPart"
                                            Storyboard.TargetProperty="StartPoint" />
                            <PointAnimation To="60,25" Duration="0:0:0.2"
                                            Storyboard.TargetName="P10"
                                            Storyboard.TargetProperty="Point" />
