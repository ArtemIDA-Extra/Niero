<Application x:Class="Niero.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Niero"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DesignDictionaries/Themes/NierAutomataTheme.xaml"/>
                <ResourceDictionary Source="DesignDictionaries/FontsNames.xaml"/>

                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Styles/DataGridStyles.xaml"/>
                <ResourceDictionary Source="Styles/OtherStyles.xaml"/>
                <ResourceDictionary Source="Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="Templates/ButtonTemplates.xaml"/>
                <ResourceDictionary Source="Templates/TextBoxTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
