<Window x:Class="Niero.Windows.MainWindow" Style="{DynamicResource MainWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Niero.Windows"
        mc:Ignorable="d"
                
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*" x:Name="MainGrid_UpRow"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.08*" x:Name="MainGrid_BottomRow"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" x:Name="MainGrid_LeftColumn"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.05*" x:Name="MainGrid_RightColumn"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid x:Name="NW" Grid.Row="0" Grid.Column="0" Background="Transparent"/>
        <Grid x:Name="N" Grid.Row="0" Grid.Column="1" Background="Transparent"/>
        <Grid x:Name="NE" Grid.Row="0" Grid.Column="2" Background="Transparent"/>

        <Grid x:Name="W" Grid.Row="1" Grid.Column="0" Background="Transparent" MouseEnter="MouseIn"/>
        <Grid x:Name="Center" Grid.Row="1" Grid.Column="1" Background="Transparent"/>
        <Grid x:Name="E" Grid.Row="1" Grid.Column="2" Background="Transparent"/>

        <Grid x:Name="SW" Grid.Row="2" Grid.Column="0" Background="Transparent"/>
        <Grid x:Name="S" Grid.Row="2" Grid.Column="1" Background="Transparent"/>
        <Grid x:Name="SE" Grid.Row="2" Grid.Column="2" Background="Transparent"/>

    </Grid>
</Window>
